<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bevproject"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/bev_logo_foreground"
        android:label="A Bird&apos;s Eye View"
        android:roundIcon="@mipmap/bev_logo_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.BEVProject" >
        <activity android:name="com.example.bevproject.MyArticles" />
        <activity
            android:name="com.example.bevproject.AuthorPage"
            android:label="@string/title_activity_author_page"
            android:theme="@style/Theme.BEVProject.NoActionBar" />
        <activity android:name="com.example.bevproject.UserDetails" />
        <activity android:name="com.example.bevproject.Profile" />
        <activity android:name="com.example.bevproject.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.bevproject.SignUp" />
        <activity android:name="com.example.bevproject.Login" />
        <activity android:name="com.example.bevproject.Home" />
        <activity android:name="com.example.bevproject.SubmitArticle" />
        <activity android:name="com.example.bevproject.ArticleItem" />
    </application>

</manifest>