<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Login">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <!--Calling toolbar to return to Main Activity-->
        <include
            android:id="@+id/include"
            layout="@layout/back_toolbar" />

        <!--Title of Form-->
        <TextView
            android:id="@+id/txLoginTitle"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="30sp"
            android:text="@string/log_in"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--Header of 'Login Name'-->
        <TextView
            android:id="@+id/txLoginEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/email"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txLoginTitle" />

        <!--Input of 'Login Name'-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edLoginEmailField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txLoginEmail"
            android:hint="@string/email_hint">

            <!--Actual Input of 'Login Name'-->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edLoginEmail"
                android:scrollbars="vertical"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--Header of 'Password'-->
        <TextView
            android:id="@+id/txLoginPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/password"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edLoginEmailField" />

        <!--Input of 'Password'-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edLoginPassField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txLoginPass"
            android:hint="@string/pass_hint">

            <!--Actual Input of 'Password'-->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edLoginPass"
                android:scrollbars="vertical"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--Submission Button-->
        <Button
            android:id="@+id/btnLoginEnter"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="50dp"
            android:text="@string/log_in"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edLoginPassField" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>